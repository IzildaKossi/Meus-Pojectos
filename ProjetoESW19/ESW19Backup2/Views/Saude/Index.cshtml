@model IEnumerable<ESW19Backup2.Models.Saude>
@using ESW19Backup2.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Titulo"] = "Lista de Vacinas";
}



<p>
    <button><a asp-action="MarcarVacina">Marcar Vacina</a></button>
</p>

<table class="table table-striped table-bordered" id="tabela-marcarEntrevista">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataVacina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avaliacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cao.Nome)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataVacina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Avaliacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cao.Nome)
                </td>
            </tr>
        }
    </tbody>
</table>

